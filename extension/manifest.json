{
    "manifest_version": 2,
 
    "name": "AliExpress Total Price",
    "description": "This extension will show total price (price + shipping costs) on catalog pages",
    "version": "0.0.1",
 
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["https://*.aliexpress.com/*"]
     }],

    "permissions": [
        "activeTab"

    ]
}
