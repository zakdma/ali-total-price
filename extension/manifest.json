{
    "manifest_version": 2,
 
    "name": "AliExpress Total Price",
    "description": "This extension will show total price (price + shipping costs) on catalog pages",
    "version": "1.0.0",
 
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "css": [
            "styles.css"
        ],
        "js": [
            "jquery-2.2.4.min.js",
            "content.js"
        ],
        "matches": [
            "https://*.aliexpress.com/*"
        ]
     }],

    "permissions": [
        "activeTab"
    ]
}
